@{
    ViewData["Title"] = "UserAccount";
}

@{
    string lecturerID = "<Empty>";
    string fullName = "<Empty>";
    string emailAddress = "<Empty>";

    <div align="center">

        <div>
            <button class="button-class" onclick="window.location = '/Home/NewRequest?Action=NewRequest'">New Request</button>
            <button class="button-class" onclick="window.location = '/Home/NewRequest?Action=EditRequest'">Edit Request</button>
            <button class="button-class" onclick="window.location = '/Home/TrackRequest'">Track Request</button>
            <button class="button-class">Cancel Request(s)</button>
            <button class="button-class">Export Log</button>
            <button class="button-class">Update Profile</button>
            <button class="button-class">Logout</button>
        </div>
        <br />


        <div style="background-color: white">
            <div class="menu-display">
                <table style="width: 50%; height: 70px">
                    <tr>
                        <th><div align="center">Lecturer ID:</div></th>
                        <th><div align="center">Full Name:</div></th>
                        <th><div align="center">Email Address:</div></th>
                    </tr>
                    <tr>
                        <td><div align="center">@lecturerID</div></td>
                        <td><div align="center">@fullName</div></td>
                        <td><div align="center">@emailAddress</div></td>
                    </tr>
                </table>
            </div>

            <div style="background-color: #304c80">
            <br />
                <table cellpadding="16" class="request-display">
                    <tr>
                        <th class="table-cell-class" style="width: 10%">Request ID</th>
                        <th class="table-cell-class" style="width: 20%">Request Name</th>
                        <th class="table-cell-class" style="width: 30%">Description</th>
                        <th class="table-cell-class" style="width: 10%">Request Approved</th>
                        <th class="table-cell-class" style="width: 10%">Status</th>
                        <th class="table-cell-class" style="width: 10%">Date Submitted</th>
                        <th class="table-cell-class" style="width: 10%">Date Approved</th>
                    </tr>

                    <!-- This is where the claims will be displayed -->
                </table>
                <br />
            </div>
            <br />

            <b>No request(s) found</b>
            <br />
            <br />
        </div>
    </div>
}